<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">

        <item name="colorPrimary">@color/color_primary_night</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent_night</item>

        <item name="colorAccentedSurface">@color/color_divider_light</item>
        <item name="colorDivider">@color/color_divider_dark</item>
        <item name="colorIcon">@android:color/white</item>

        <item name="colorBackground">@color/color_background_night</item>
        <item name="colorItemBackground">@color/color_item_background_night</item>
        <item name="colorItemSelected">@color/color_primary_night</item>
        <item name="colorChip">@color/color_item_background_night</item>
        <item name="colorSnackbarText">@android:color/black</item>
        <item name="colorTitleText">@android:color/white</item>
        <item name="colorNicknameText">@android:color/white</item>
        <item name="colorSubtitleText">@color/color_gray</item>
        <item name="colorKeyboard">@android:color/black</item>

        <item name="colorInitialSwipe">@color/color_accent_night</item>
        <item name="colorFinishSwipe">@color/color_accent_light_night</item>

        <item name="android:statusBarColor">@android:color/black</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransitions</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

</resources>